.deoxyribonucleic
	margin: 0 auto
	max-width: 480px
	.acid
		animation-name: deoxy
		animation-duration: 2s
		animation-timing-function: cubic-bezier(.49,.21,.52,.81)
		animation-iteration-count: infinite
		border-bottom: 3px solid #1f7395
		margin: 40px auto
		padding-top: 7px 
		position: relative
		width: 15px
		line-shadow()
		&:before, &:after
			content: ' '
			background-color: #030304
			height: 16px
			position: absolute
			top: 0
			width: 16px
			border-radius(50%)
			ball-shadow()
		&:before
			left: 0
		&:after
			right: 0


for i in 1 2 3 4 5 
	.delay{i}
		animation-delay(i)


@keyframes deoxy
	50%
		width: 100%